<h2>Applicant Registration</h2>
<form id="registration-form" action="thankyou.html" method="get">
  <div>
    <label for="user-id">Create User ID:</label>
    <input type="text" id="user-id" name="user-id" minlength="5" maxlength="30" pattern="[a-zA-Z][a-zA-Z0-9_-]{4,29}" title="5 to 30 characters, no special characters, no spaces, must start with a letter" required>
    <div id="error-user-id" class="error-message"></div>
  </div>
  <div>
    <label for="password">Create Password:</label>
    <input type="password" id="password" name="password" minlength="8" maxlength="30" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#%^&*()-_+=\/><.,`~])[A-Za-z\d!@#%^&*()-_+=\/><.,`~]{8,30}$" title="At least 8 characters, 1 uppercase letter, 1 lowercase letter, 1 digit, 1 special character" required>
  </div>
  <div>
    <label for="confirm-password">Confirm Password:</label>
    <input type="password" id="confirm-password" name="confirm-password" required>
    <div id="error-confirm-password" class="error-message"></div>
  </div>
  <button type="submit">Submit</button>
</form>

<tr>
<form action="action_page.php" method="post">
