<script>
document.getElementById('registration-form').addEventListener('submit', function(event) {
  var userId = document.getElementById('user-id').value;
  var password = document.getElementById('password').value;
  var confirmPassword = document.getElementById('confirm-password').value;

  var userIdPattern = /^[a-zA-Z][a-zA-Z0-9_-]{4,29}$/;
  var passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#%^&*()-_+=\/><.,`~])[A-Za-z\d!@#%^&*()-_+=\/><.,`~]{8,30}$/;

  var userIdError = "";
  var passwordError = "";
  var confirmPasswordError = "";

  // Validate User ID
  if (!userIdPattern.test(userId)) {
    userIdError = "User ID must be 5 to 30 characters, start with a letter, and contain only letters, numbers, underscore, or dash.";
    document.getElementById('error-user-id').textContent = userIdError;
  }

  // Validate Password
  if (!passwordPattern.test(password)) {
    passwordError = "Password must be at least 8 characters, including 1 uppercase letter, 1 lowercase letter, 1 digit, and 1 special character.";
    document.getElementById('error-confirm-password').textContent = passwordError;
  }

  // Validate Confirm Password
  if (password !== confirmPassword) {
    confirmPasswordError = "Passwords do not match.";
    document.getElementById('error-confirm-password').textContent = confirmPasswordError;
  }

  // If there's any error, prevent form submission
  if (userIdError || passwordError || confirmPasswordError) {
    event.preventDefault();
  } else {
    // Allow form to submit and redirect
    event.target.submit();  // This ensures the form is properly submitted.
  }
});
</script>
